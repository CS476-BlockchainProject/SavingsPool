{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "hardhat", "vitest/globals"]
  },
  "include": [
    "scripts/**/*.ts",
    "test/**/*.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
